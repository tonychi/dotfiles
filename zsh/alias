# zsh
alias la="ls -a"

# quick edit config
alias evim="vim ~/.vimrc"
alias ezsh="vim ~/.zshrc"
alias ebash="vim ~/.bash_profile"
alias ealias="vim ~/.alias"

alias evg="vim Vagrantflie"

# vagrant
alias vg="vagrant"

unalias lsa
unalias ll

# alias for cnpm
alias cnpm="npm --registry=https://registry.npm.taobao.org --cache=$HOME/.npm/.cache/cnpm --disturl=https://npm.taobao.org/dist --userconfig=$HOME/.cnpmrc"
alias hnpm="npm --registry=http://128.1.10.8:7001 --cache=$HOME/.npm/.cache/hnpm --userconfig=$HOME/.hnpmrc"

alias npmlg="npm list -g -depth=0"
alias npml="npm list -depth=0"

# alias for calibre
alias ebc="/Applications/calibre.app/Contents/MacOS/ebook-convert"

